<!DOCTYPE html>
<html lang="en">
    <body>
        <%- include('../partials/header') %>
        <h1>Lista de productos</h1>
        
        <% if (productos.length > 0) { %>
        
            <table>
                <tr>
                    <th>#ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
                <% productos.forEach(function(producto){ %>
                    <tr>
                        <td><%= producto.id %></td>
                        <td><%= producto.title %></td>
                        <td><%= producto.price %></td>
                        <td><%= producto.thumbnail %></td>
                    </tr>
                <%}) %>
            </table>
            
            <%} else { %>
            
            <p> No hay productos en la lista </p>
            
        <% } %>
         

    </body>
</html>
